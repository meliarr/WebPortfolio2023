---
import type { CollectionEntry } from 'astro:content';

interface Props {
	project: CollectionEntry<'work'>;
}

const { data, slug } = Astro.props.project;
---

<a class="card" href={`/work/${slug}`}>
	<span class="title">{data.title}</span>
	<img src={data.img} alt={data.img_alt || ''} loading="lazy" decoding="async" />
</a>

<style>
	.card {
		height: 100%;
		display: block;
		border: 1px solid #eaeaea;
		position: relative;
		transition: 800ms;
		&:hover {
			transform: translateY(-10px);
			transition: 800ms;
		}
	}
	.card::after {
		content: '';
		width: 100%;
		height: 100%;
		background-color: theme('colors.mainPurple');
		position: absolute;
		top: 0;
		opacity: .88;
		z-index: 0;
	}
	.card img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: top;
	}
	.title {
		position: absolute;
		top: 40%;
		left: 0;
		right: 0;
		margin: 0 auto;
		width: fit-content;
		font-family: theme('fontFamily.condensed');
		font-size: 25px;
		color: theme('colors.white');
		letter-spacing: 1px;
		z-index: 1;
		background: theme('colors.accentPurple');
		padding: 10px 15px;
	}
</style>
