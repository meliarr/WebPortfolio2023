---

interface Props {
  project: {
    slug: string;
    data: {
      title: string;
      img: string;
      img_alt?: string | undefined;
    };
  };
}

const project = Astro.props.project;

---

<a class="card" href={`/work/${project.slug}`}>
	<span class="title">{project.data.title}</span>
	<img src={project.data.img} alt={project.data.img_alt || ''} loading="lazy" decoding="async" />
</a>

<style>
	.card {
		height: 100%;
		display: block;
		border: 1px solid #eaeaea;
		position: relative;
		transition: 800ms;
		&::after {
			content: '';
			width: 100%;
			height: 101%;
			background-color: theme('colors.mainPurple');
			position: absolute;
			top: 0;
			opacity: .88;
			z-index: 0;
			transition: 800ms;
		}
		&:hover {
			transform: translateY(-10px);
			transition: 800ms;
			&::after {
				opacity: .35;
				transition: 800ms;
			}
		}
	}
	.card img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: top;
	}
	.title {
		position: absolute;
		top: 40%;
		left: 0;
		right: 0;
		margin: 0 auto;
		width: fit-content;
		font-family: theme('fontFamily.condensed');
		font-size: 25px;
		color: theme('colors.white');
		letter-spacing: 1px;
		z-index: 1;
		background: theme('colors.accentPurple');
		padding: 10px 15px;
	}
</style>
